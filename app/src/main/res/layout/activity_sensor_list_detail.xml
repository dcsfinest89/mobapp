<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sensor_list_detail">

    <TextView
        android:id="@+id/sensorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="49dp"
        android:text="Sensor Name:"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sensorVendor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp"
        android:text="Sensor Vendor:"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintEnd_toStartOf="@+id/sensorVendorValue"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensorName" />

    <TextView
        android:id="@+id/sensorPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:text="Sensor Pressure:"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensorVendor" />

    <TextView
        android:id="@+id/sensorAcceleration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="60dp"
        android:text="sensorAcceleration:"
        android:textSize="24sp"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sensorPressure" />

    <TextView
        android:id="@+id/sensorPressureValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Sensor Pressure"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBaseline_toBaselineOf="@+id/sensorPressure"
        app:layout_constraintStart_toEndOf="@+id/sensorPressure" />

    <TextView
        android:id="@+id/sensorAccelerationValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="sensorAcceleration"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBaseline_toBaselineOf="@+id/sensorAcceleration"
        app:layout_constraintStart_toEndOf="@+id/sensorAcceleration" />

    <TextView
        android:id="@+id/sensorVendorValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:text="Sensor Vendor"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBaseline_toBaselineOf="@+id/sensorVendor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sensorVendor" />

    <TextView
        android:id="@+id/sensorNameValue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="32dp"
        android:text="Sensor Name"
        android:textSize="18sp"
        android:typeface="serif"
        app:layout_constraintBaseline_toBaselineOf="@+id/sensorName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sensorName" />

</android.support.constraint.ConstraintLayout>